<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}} | Markdoc Documentation</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        line-height: 1.6;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        color: #333;
      }
      nav {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #eee;
      }
      nav a {
        color: #007acc;
        text-decoration: none;
      }
      nav a:hover {
        text-decoration: underline;
      }
      h1,
      h2,
      h3 {
        color: #2c3e50;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        margin: 10px 0;
      }
      li a {
        color: #007acc;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 4px;
        display: inline-block;
      }
      li a:hover {
        background-color: #f5f5f5;
      }
      code {
        background-color: #f4f4f4;
        padding: 2px 4px;
        border-radius: 3px;
        font-family: "Monaco", "Consolas", monospace;
      }
      pre {
        background-color: #f4f4f4;
        padding: 15px;
        border-radius: 5px;
        overflow-x: auto;
      }
    </style>
  </head>
  <body>
    {{#if showNavigation}}
      <nav>
        <a href="/">Back to Home</a>
      </nav>
    {{/if}}

    <main>
      {{{body}}}
    </main>

    <script>
      console.log('Starting SSE connection'); const eventSource = new EventSource('http://localhost:3000/events'); eventSource.onopen = function(event) {
      console.log('SSE connection opened'); }; eventSource.onmessage = function(event) { console.log('SSE message received:', event.data); if (event.data ===
      'reload') { location.reload(); } }; eventSource.onerror = function(event) { console.error('SSE connection error:', event); };
    </script>
  </body>
</html>